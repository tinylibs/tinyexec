{
  "name": "tinyexec",
  "version": "0.0.1",
  "type": "module",
  "description": "A minimal library for executing processes in Node",
  "main": "./dist/commonjs/main.js",
  "files": [
    "dist",
    "!dist/node_modules",
    "!dist/cjs/test",
    "!dist/esm/test"
  ],
  "scripts": {
    "build": "tsc --noEmit",
    "test": "npm run build && node --test dist/esm/test",
    "lint": "eslint src",
    "format": "prettier --write src",
    "prepare": "tshy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinylibs/tinyexec.git"
  },
  "keywords": [
    "execa",
    "exec",
    "tiny",
    "child_process",
    "spawn"
  ],
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinylibs/tinyexec/issues"
  },
  "tshy": {
    "exclude": [
      "src/test"
    ],
    "exports": {
      ".": "./src/main.ts",
      "./package.json": "./package.json"
    }
  },
  "homepage": "https://github.com/tinylibs/tinyexec#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.12.7",
    "c8": "^9.1.0",
    "eslint-config-google": "^0.14.0",
    "prettier": "^3.2.5",
    "tshy": "^1.14.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/main.d.ts",
        "default": "./dist/esm/main.js"
      },
      "require": {
        "types": "./dist/commonjs/main.d.ts",
        "default": "./dist/commonjs/main.js"
      }
    },
    "./package.json": "./package.json"
  },
  "types": "./dist/commonjs/main.d.ts"
}
