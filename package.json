{
  "name": "tinyexec",
  "version": "0.0.0-dev",
  "type": "module",
  "description": "A minimal library for executing processes in Node",
  "main": "./dist/main.js",
  "files": [
    "dist",
    "!dist/node_modules",
    "!dist/cjs/test",
    "!dist/esm/test"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.js",
    "dev": "rollup -c rollup.config.js --watch",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "lint": "eslint src",
    "prepare": "npm run build",
    "test": "npm run build && c8 node --test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tinylibs/tinyexec.git"
  },
  "keywords": [
    "execa",
    "exec",
    "tiny",
    "child_process",
    "spawn"
  ],
  "author": "James Garbutt (https://github.com/43081j)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tinylibs/tinyexec/issues"
  },
  "homepage": "https://github.com/tinylibs/tinyexec#readme",
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/cross-spawn": "^6.0.6",
    "@types/node": "^20.12.7",
    "c8": "^9.1.0",
    "cross-spawn": "^7.0.3",
    "eslint-config-google": "^0.14.0",
    "prettier": "^3.2.5",
    "rollup": "^4.21.1",
    "tslib": "^2.7.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.7.0"
  },
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "./dist/main.d.ts"
}
